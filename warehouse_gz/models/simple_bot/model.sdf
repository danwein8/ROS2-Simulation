<?xml version="1.0" ?>
<sdf version="1.8">
  <model name="simple_bot">
    <pose>0 0 0.1 0 0 0</pose>

    <link name="base_link">
      <inertial>
        <mass>5.0</mass>
        <inertia>
          <ixx>0.08</ixx><iyy>0.08</iyy><izz>0.08</izz>
          <ixy>0</ixy><ixz>0</ixz><iyz>0</iyz>
        </inertia>
      </inertial>

      <collision name="base_collision">
        <geometry><box><size>0.45 0.35 0.2</size></box></geometry>
      </collision>

      <visual name="base_visual">
        <geometry><box><size>0.45 0.35 0.2</size></box></geometry>
      </visual>
    </link>

    <!-- Differential drive plugin expects left/right wheel joints; keep it light.
         Wheels are simple cylinders attached by revolute joints. -->
    <link name="left_wheel">
      <pose>0 0.18 0.05 0 1.5708 0</pose>
      <collision name="collision">
        <geometry><cylinder><radius>0.06</radius><length>0.03</length></cylinder></geometry>
      </collision>
      <visual name="visual">
        <geometry><cylinder><radius>0.06</radius><length>0.03</length></cylinder></geometry>
      </visual>
    </link>

    <link name="right_wheel">
      <pose>0 -0.18 0.05 0 1.5708 0</pose>
      <collision name="collision">
        <geometry><cylinder><radius>0.06</radius><length>0.03</length></cylinder></geometry>
      </collision>
      <visual name="visual">
        <geometry><cylinder><radius>0.06</radius><length>0.03</length></cylinder></geometry>
      </visual>
    </link>

    <joint name="left_wheel_joint" type="revolute">
      <parent>base_link</parent>
      <child>left_wheel</child>
      <axis>
        <xyz>0 1 0</xyz>
      </axis>
    </joint>

    <joint name="right_wheel_joint" type="revolute">
      <parent>base_link</parent>
      <child>right_wheel</child>
      <axis>
        <xyz>0 1 0</xyz>
      </axis>
    </joint>

    <!-- Diff drive system -->
    <plugin filename="gz-sim-diff-drive-system" name="gz::sim::systems::DiffDrive">
      <left_joint>left_wheel_joint</left_joint>
      <right_joint>right_wheel_joint</right_joint>
      <wheel_separation>0.36</wheel_separation>
      <wheel_radius>0.06</wheel_radius>
      <topic>cmd_vel</topic>
      <odom_topic>odom</odom_topic>
      <frame_id>odom</frame_id>
      <child_frame_id>base_link</child_frame_id>
      <max_linear_velocity>1.0</max_linear_velocity>
      <max_angular_velocity>2.0</max_angular_velocity>
    </plugin>
  </model>
</sdf>
