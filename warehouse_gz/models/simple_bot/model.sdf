<?xml version="1.0" ?>
<sdf version="1.8">
  <model name="simple_bot">
    <pose>0 0 0.1 0 0 0</pose>

    <link name="base_link">
      <inertial>
        <mass>1.0</mass>
        <inertia>
          <ixx>0.083</ixx><iyy>0.083</iyy><izz>0.083</izz>
          <ixy>0</ixy><ixz>0</ixz><iyz>0</iyz>
        </inertia>
      </inertial>

      <collision name="base_collision">
        <geometry><box><size>2.0 1.0 0.5</size></box></geometry>
      </collision>

      <visual name="base_visual">
        <geometry><box><size>2.0 1.0 0.5</size></box></geometry>
          <!-- simple blue material for the robot body -->
          <material>
            <ambient>0.1 0.1 0.8 1</ambient>
            <diffuse>0.1 0.1 0.8 1</diffuse>
          </material>
      </visual>
    </link>

    <!-- Differential drive plugin expects left/right wheel joints; keep it light.
         Wheels are simple cylinders attached by revolute joints. -->
    <link name="left_wheel">
      <pose relative_to="base_link">-0.5 0.6 0 -1.5707 0 0</pose>
      <inertial>
        <mass>0.2</mass>
        <inertia>
          <ixx>0.005</ixx><iyy>0.005</iyy><izz>0.005</izz>
          <ixy>0</ixy><ixz>0</ixz><iyz>0</iyz>
        </inertia>
      </inertial>
      <collision name="collision">
        <geometry><cylinder><radius>0.4</radius><length>0.2</length></cylinder></geometry>
        <material>
          <ambient>1.0 1.0 1.0 1</ambient>
          <diffuse>1.0 1.0 1.0 1</diffuse>
        </material>
      </collision>
      <visual name="visual">
        <geometry><cylinder><radius>0.4</radius><length>0.2</length></cylinder></geometry>
      </visual>
    </link>

    <link name="right_wheel">
      <pose relative_to="base_link">-0.5 -0.6 0 -1.5707 0 0</pose>
      <inertial>
        <mass>0.2</mass>
        <inertia>
          <ixx>0.005</ixx><iyy>0.005</iyy><izz>0.005</izz>
          <ixy>0</ixy><ixz>0</ixz><iyz>0</iyz>
        </inertia>
      </inertial>
      <collision name="collision">
        <geometry><cylinder><radius>0.4</radius><length>0.2</length></cylinder></geometry>
        <material>
          <ambient>1.0 1.0 1.0 1</ambient>
          <diffuse>1.0 1.0 1.0 1</diffuse>
        </material>
      </collision>
      <visual name="visual">
        <geometry><cylinder><radius>0.4</radius><length>0.2</length></cylinder></geometry>
      </visual>
    </link>

    <frame name="caster_frame" attached_to="base_link">
      <pose>0.8 0 -0.2  0 0 0</pose>
    </frame>

    <!--caster wheel-->
    <link name="caster">
      <pose relative_to="caster_frame">0 0 0 0 0 0</pose>
      <inertial>
        <mass>0.1</mass>
        <inertia>
          <ixx>0.001</ixx><iyy>0.001</iyy><izz>0.001</izz>
          <ixy>0</ixy><ixz>0</ixz><iyz>0</iyz>
        </inertia>
      </inertial>
      <collision name="collision">
        <geometry>
          <sphere>
            <radius>0.2</radius>
          </sphere>
        </geometry>
        <material>
          <ambient>1.0 1.0 1.0 1</ambient>
          <diffuse>1.0 1.0 1.0 1</diffuse>
        </material>
      </collision>
      <visual name="visual">
        <geometry>
          <sphere>
            <radius>0.2</radius>
          </sphere>
        </geometry>
      </visual>
    </link>

    <joint name="left_wheel_joint" type="revolute">
      <pose relative_to='left_wheel'>0 0 0 0 0 0</pose>
      <parent>base_link</parent>
      <child>left_wheel</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-1.79769e+308</lower>
          <upper>1.79769e+308</upper>
        </limit>
      </axis>
    </joint>

    <joint name="right_wheel_joint" type="revolute">
      <pose relative_to='right_wheel'>0 0 0 0 0 0</pose>
      <parent>base_link</parent>
      <child>right_wheel</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-1.79769e+308</lower>
          <upper>1.79769e+308</upper>
        </limit>
      </axis>
    </joint>

    <joint name='caster_joint' type='ball'>
      <parent>base_link</parent>
      <child>caster</child>
      <pose relative_to='caster'>0 0 0 0 0 0</pose>
    </joint>

    <!-- Diff drive system -->
    <plugin filename="gz-sim-diff-drive-system" name="gz::sim::systems::DiffDrive">
      <left_joint>left_wheel_joint</left_joint>
      <right_joint>right_wheel_joint</right_joint>
      <wheel_separation>1.2</wheel_separation>
      <wheel_radius>0.4</wheel_radius>
      <topic>cmd_vel</topic>
      <odom_topic>odom</odom_topic>
      <frame_id>odom</frame_id>
      <child_frame_id>base_link</child_frame_id>
      <max_linear_velocity>1.0</max_linear_velocity>
      <max_angular_velocity>2.0</max_angular_velocity>
    </plugin>
  </model>
</sdf>
